@import "lib"

#app
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	background color-bg-dark0
	color color-text-light2
	overflow hidden
	padding 0

	grid-gap 5px
	display grid
	grid-template-columns auto auto 1fr
	grid-template-rows 60px auto
	grid-template-areas "header header header" "folders notes editor"


	.header
	.folders
	.notes
	.editor
		background color-bg-dark1

h1
	margin 0
	b 0


h2
	display flex
	justify-content space-between
	align-items center
	b 0
	margin 0
	padding 0 10
	border-bottom color-accent
	font 20
	height 48

.scroller
	flex 1
	overflow hidden
	overflow-y auto

.flex-filler
	flex 1
