	// &:active
	// 	background darken(color-default, 15%)
	// 	color darken(color-text-light2, 40%)

	// &.info
	border-color lighten(color-info, 20%)
	border-bottom-color lighten(color-info, 10%)
	background color-info

	&:focus
		box-shadow 0 0 1px lighten(color-info, 50%)

	&:active
		background darken(color-info, 15%)




	&.success
		border-color color-success
		border-bottom-color darken(color-success, 5%)
		background darken(color-success, 30%)

		&:focus
			box-shadow 0 0 1px lighten(color-success, 50%)

		&:active
			background darken(color-success, 15%)


	&.warning
		border-color lighten(color-warning, 20%)
		border-bottom-color lighten(color-warning, 10%)
		background color-warning

		&:focus
			box-shadow 0 0 1px lighten(color-warning, 50%)

		&:active
			background darken(color-warning, 15%)


	&.danger
		border-color lighten(color-danger, 20%)
		border-bottom-color lighten(color-danger, 10%)
		background color-danger

		&:focus
			box-shadow 0 0 1px lighten(color-danger, 50%)

		&:active
			background darken(color-danger, 15%)




.btn-outline
	background none
	border-radius 4
	font-size inherit
	color color-text-light2
	border lighten(color-default, 20%)

	&:focus
		outline none
		box-shadow 0 0 1px lighten(color-default, 50%)

	&:hover
		border-color darken(color-default, 15%)
		color darken(color-text-light2, 40%)
