@import "lib"

color-default = nord3


button::-moz-focus-inner
	padding 0 !important
	border 0


.btn
	font inherit
	show 1
	line-height 1
	padding 5 15
	min-width 24px
	min-height 24px
	margin-bottom 0
	font 14/1.4
	height auto;
	text-align center
	white-space nowrap
	vertical-align middle
	cursor default
	border transparent
	border-radius 3
	transition background-color .2s, border-color .2s
	user-select none
	shadow 0 1 1 #000 .06;
	color color-text-light2



	// default
	// border-color lighten(color-default, 20%)
