@import "lib"

.folders
	grid-area folders
	width 160px

	.folder:first-child
		border-bottom 5px solid #2e3440

	.folder:last-child
		border-top 4px solid #2e3440

	.folder.drag-over
		background color-accent !important


@media (max-width: 900px)
	#app
		left -5px
	.header
		padding-left 20px
	.folders
		width 0
