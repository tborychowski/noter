@import "lib"

.folders
	grid-area folders
	width 200px
	transition width .2s
	background #333
	color #ccc
	overflow hidden
	display flex
	flex-flow column
	position relative


	.folder
		display block
		color inherit
		padding 10
		text-decoration none

		&:focus
		&:hover
			background-color #fff1
			outline none

		&.selected
			background-color #fff3




@media (max-width: 900px)
	.folders
		width 0
