@import "lib"

.notes
	grid-area notes
	width 300px
	border-right color-bg-dark3

.note
	display flex
	flex-flow row
	align-items flex-start
	justify-content space-between
	align-items flex-start
	margin-bottom 5px

	&:last-child
		margin-bottom 100px

	.note-title
		font-size 16px

	.note-thumb
		size 64px
		background-repeat no-repeat
		background-size cover
		background-position center

	.note-info
		float left
		color alpha(color-text-light0, .4)
		margin 5px 20px 0 0

		em
			color alpha(color-text-light0, .8)



.notes-header
	padding 0 padding-h
	height 56px
	border-bottom color-bg-dark3
	display flex
	flex-flow row
	align-items center
	justify-content space-between
	color alpha(color-text-light0, .5)
	user-select none


.sorter-btn
	padding 3px
	margin 0 2px
	color inherit
	text-decoration none
	border-radius 4px
	border transparent
	cursor default

	&:hover
		border color-text-light0
		color color-text-light0

	&.active
		color color-accent
		border color-accent


@media (max-width: 600px)
	#app
		left -10px
	.header
		padding-left 25px
	.notes
		width 0
