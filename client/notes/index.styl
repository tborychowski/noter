@import "lib"

.notes
	grid-area notes
	width 300px
	transition width .2s
	overflow hidden
	display flex
	flex-flow column


	.note
		display block
		color inherit
		padding 10
		text-decoration none

		&:focus
		&:hover
			background-color color-highlight
			outline none

		&.selected
			background-color color-accent
			color color-text-dark0
			box-shadow 0 0 1px #0008

	.note-folder
		background color-bg-dark3
		color color-text-light2
		float right

		&:empty
			display none

@media (max-width: 600px)
	.notes
		width 0

