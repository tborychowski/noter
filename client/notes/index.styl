@import "lib"

.notes
	grid-area notes
	width 300px


	.note
		display flex
		flex-flow row
		align-items flex-start
		justify-content space-between

		.note-thumb
			size 64px
			background-repeat no-repeat
			background-size cover
			background-position center

		.note-title
			margin-bottom 15px

		.list-item-badge
			float left
			margin 0 10px 0 -4px


@media (max-width: 600px)
	#app
		left -10px
	.header
		padding-left 25px
	.notes
		width 0

