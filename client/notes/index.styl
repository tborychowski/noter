@import "lib"

.notes
	grid-area notes
	width 300px
	transition width .2s
	background #333
	color #ccc
	overflow hidden
	display flex
	flex-flow column


	.note
		display block
		color inherit
		padding 10
		text-decoration none

		&:focus
		&:hover
			background-color #fff1
			outline none

		&.selected
			background-color #fff3


@media (max-width: 600px)
	.notes
		width 0

