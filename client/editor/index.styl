@import "lib"

.editor
	grid-area editor
	flex 1
	overflow hidden
	display flex
	flex-flow column
	line-height 1.4

	&:focus-within
		box-shadow 0 0 0 1px color-accent inset
		outline none

	.scroller:focus
		outline none

	form
		flex 1
		display flex
		flex-flow column

	input
		font 16
		margin 0

		&:focus
			outline none
			box-shadow none

		&.note-title-input
			flex 1

	button
		margin 0 5

	textarea
		width 100%
		height 100%
		border-radius 0
		margin 0
		padding 10
		font inherit
		resize none

	label
		width 60px

	pre
		background color-bg-dark0
		padding 10
		border-radius 4px
		overflow-x auto
		// white-space pre-wrap
		// word-break break-all

	.note-title
		padding 0 10
		font-size 28px
		font-weight 100

	.note-text
		padding 20

	.dates
		font 12/1
		color color-text-light0
		opacity 0.4
		text-align right
		padding-right 30px


.editor-header
	display flex
	flex-flow column
	border-bottom color-accent
	padding 10 10 5

	.edit &
		border-bottom none

.editor-header-row
	display flex
	flex-wrap wrap
	flex-flow row
	align-items center
	justify-content space-between
	width 100%

	&.edit+&.edit
		margin 15 0 5

.editor.view .editor-header-row.edit
.editor.edit .editor-header-row.view
	display none


// NOTE STYLES
.editor

	a
		color color-link0

		&:hover
			color color-link2

	*[class^="ion-"]
		font-size 18px
		margin-right 5px
		vertical-align middle
		opacity 0.7

	h1
		font 24
		padding 5 0
		border-bottom 1px dotted color-accent
	h2
		font 22
		border-bottom 1px dotted alpha(color-accent, 0.6)
	h3
		font 18
	h4
		font 16
	h5
		font 14
