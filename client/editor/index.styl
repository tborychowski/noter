@import "lib"

.editor
	grid-area editor
	flex 1
	overflow hidden
	display flex
	flex-flow column
	line-height 1.4
	margin 0 1px 1px 0
	opacity 1
	z-index 1
	transition transform .3s ease-out
	// background color-bg-dark1
	background color-bg-dark0

	&:empty
		background color-bg-dark0

	&:not(.edit):focus-within
		outline 1px solid color-accent

	.scroller:focus
		outline none

	form
		flex 1
		display flex
		flex-flow column
		height 100%

	input
		font 16
		margin 0

		&:focus
			outline none
			box-shadow none

		&.note-title-input
			flex 1

	button
		margin 0 5

	textarea
		width 100%
		height 100%
		border-radius 0
		margin 0
		padding 10
		font inherit
		resize none

	label
		width 60px


	.note-title
		padding 0 10
		font-size 28px
		font-weight 100

	.note-text
		padding 20

	.dates
		font 12/1
		color color-text-light0
		opacity 0.4
		text-align right
		padding-right 30px


.editor-header
	display flex
	flex-flow column
	border-bottom color-accent
	padding 8 10

	.edit &
		border-bottom none

.editor-header-row
	display flex
	flex-wrap wrap
	flex-flow row
	align-items center
	justify-content space-between
	width 100%

	&.edit+&.edit
		margin 15 0 5

.editor.view .editor-header-row.edit
.editor.edit .editor-header-row.view
	display none
